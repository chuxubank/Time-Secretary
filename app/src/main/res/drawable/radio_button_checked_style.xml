<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="@dimen/radio_button_size" />

            <size
                android:width="@dimen/radio_button_size"
                android:height="@dimen/radio_button_size" />

            <stroke
                android:width="1dp"
                android:color="#66CCFF" />

        </shape>
    </item>

    <item
        android:bottom="@dimen/radio_button_in_padding"
        android:left="@dimen/radio_button_in_padding"
        android:right="@dimen/radio_button_in_padding"
        android:top="@dimen/radio_button_in_padding">
        <shape>
            <corners android:radius="@dimen/radio_button_in_size" />

            <size
                android:width="@dimen/radio_button_in_size"
                android:height="@dimen/radio_button_in_size" />

            <solid android:color="#66CCFF" />

        </shape>
    </item>

</layer-list>
